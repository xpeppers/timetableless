extends layouts/default.pug

block content
  .succeeded.transition-all.duration-250.ease-in-out.hidden
    .mb-4.py-20
      h4.text-purple-700.text-xl
        | Registrazione effettuata
        br
        | con successo
    .flex.items-center.justify-between.pt-3
      button#register-again.bg-purple-700.text-white.font-bold.py-2.px-4.rounded(class='hover:bg-purple-900 focus:outline-none focus:shadow-outline' type='button')
        | Registrati di nuovo

  .inputs.transition-all.duration-250.ease-in-out
    .mb-4
      label.block.text-gray-700.text-sm.font-bold.mb-2(for='train-number')
        | Numero treno
      input#train-number.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(type='text' class='focus:outline-none focus:shadow-outline' placeholder='Numero treno')
    .mb-4
      label.block.text-gray-700.text-sm.font-bold.mb-2(for='station')
        | Stazione
      input#station.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(type='text' class='focus:outline-none focus:shadow-outline' placeholder='Stazione')
      input#stationId(type='hidden')
    .mb-4
      label.block.text-gray-700.text-sm.font-bold.mb-2(for='email')
        | Email
      input#email.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(type='email' class='focus:outline-none focus:shadow-outline' placeholder='tua@email.it')
    .flex.items-center.justify-between
      p.text-red-500.text-xs.italic.error-message
      button#submit-button.bg-purple-700.text-white.font-bold.py-2.px-4.rounded(class='hover:bg-purple-900 focus:outline-none focus:shadow-outline' type='button')
        | Registrati
